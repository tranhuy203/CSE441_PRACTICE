<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StudentInfoActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Thông tin sinh viên"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="324dp"
        android:layout_height="119dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/man" />

    <View
        android:id="@+id/border"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#C7C6C6" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/border"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="fjsidfisodj"
        android:textColor="#FB4235"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_id"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="fjsidfisodj"
        android:textColor="#FB4235"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_birth_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="fjsidfisodj"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_birth_date"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="fjsidfisodj"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_address"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="fjsidfisodj"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gender"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="fjsidfisodj"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_email"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="fjsidfisodj"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_gpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_major"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="fjsidfisodj"
        android:textColor="#FB4235"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gpa"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="fjsidfisodj"
        android:textSize="20dp"
        android:textStyle="bold" />
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:title="Id"
        android:background="#673AB7"/>
</RelativeLayout>